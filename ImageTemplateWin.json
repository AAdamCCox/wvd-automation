{
    "type": "Microsoft.VirtualMachineImages/imageTemplates",
    "apiVersion": "2020-02-14",
    "location": "<region>",
    "dependsOn": [],
    "tags": {
        "imagebuilderTemplate": "winserver2022",
        "userIdentity": "enabled"
    },
	"identity": {
		"type": "UserAssigned",
			"userAssignedIdentities": {
				"<imgBuilderId>": {}   
			}
	},
    "properties": {
        "buildTimeoutInMinutes" : 100,
        "vmProfile": {
			"vmSize": "Standard_A2_v2",
			"osDiskSizeGB": 63
        },
        "source": {
            "type": "PlatformImage",
			"publisher": "MicrosoftWindowsServer",
			"offer": "WindowsServer",
			"sku": "2022-Datacenter-SmallDisk",
			"version": "latest"
        },
        "customize": [
            {
                "type": "PowerShell",
                "name": "GeneralConfig",
                "runElevated": true,
                "inline": [
                    "mkdir c:\\buildActions",
					"Set-MpPreference -ScanOnlyIfIdleEnabled $True -DisableCpuThrottleOnIdleScans $False -ScanAvgCPULoadFactor 10 -Force",
                    "echo Configured-Windows-Defender  > c:\\buildActions\\buildActionsOutput.txt"
                ]
			},
            {
                "type": "PowerShell",
                "name": "AddModules",
                "runElevated": true,
                "inline": [
                    "powershell -ExecutionPolicy Bypass -Command \"Install-PackageProvider -Name NuGet -MinimumVersion 2.8.5.201 -Force -Verbose\"",
					"powershell -ExecutionPolicy Bypass -Command \"Install-Module -Name Az.Accounts -RequiredVersion 2.7.4 -Scope AllUsers -Repository PSGallery -Force -Verbose\"",
					"powershell -ExecutionPolicy Bypass -Command \"Install-Module -Name Az.KeyVault -RequiredVersion 4.2.1 -Scope AllUsers -Repository PSGallery -Force -Verbose\"",
                    "powershell -ExecutionPolicy Bypass -Command \"Install-Module -Name Microsoft.Graph.Authentication -RequiredVersion 1.9.3.0 -Scope AllUsers -Repository PSGallery -Force -Verbose\"",
					"powershell -ExecutionPolicy Bypass -Command \"Install-Module -Name PnP.PowerShell -RequiredVersion 1.10.0 -Scope AllUsers -Repository PSGallery -Force -Verbose\""
                ]
			},
			{
				"type": "WindowsUpdate",
				"searchCriteria": "IsInstalled=0",
				"filters": [
					"exclude:$_.Title -like '*Preview*'",
					"include:$true"
				],
				"updateLimit": 50
			},
            {
                "type": "WindowsRestart",
                "restartCheckCommand": "echo Azure-Image-Builder-Restarted-the-VM  > c:\\buildActions\\azureImageBuilderRestart.txt",
                "restartTimeout": "5m"
            }
        ],
        "distribute": [
			{   
				"type":"ManagedImage",
				"imageId": "/subscriptions/<subscriptionID>/resourceGroups/<rgName>/providers/Microsoft.Compute/images/<imageName>",
				"location": "<region>",
				"runOutputName": "<runOutputName>",
				"artifactTags": {
					"source": "azVmImageBuilder",
					"baseosimg": "winserver20222022"
				}
			}
		]
	}
}